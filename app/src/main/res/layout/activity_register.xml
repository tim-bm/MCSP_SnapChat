<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.snapchat.team2.snapchat.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up a new user"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/text_grey"
        android:text="your e-mail address"
        android:layout_gravity="center"
        android:id="@+id/register_email_hint"/>

    <EditText
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/register_email"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/text_grey"
        android:text="your password"
        android:layout_gravity="center"
        android:id="@+id/register_password_hint"/>

    <EditText
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:id="@+id/register_password"
       />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/text_grey"
        android:text="confirm your password"
        android:layout_gravity="center"
        android:id="@+id/register_confirm_password_hint"/>

    <EditText
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:id="@+id/register_confirm_password"
        />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/login_button_style"
        android:text="additions"
        android:id="@+id/submit_register1"

        />
</LinearLayout>
